                                    <td class="border border-green-600 text-white text-center">
                                        <%= vegetables[i].humidity %>
                                    </td>
                                    <td class="border border-green-600 text-white text-center">
                                        <%= vegetables[i].uv %>
                                    </td>
                                    <td class="border border-green-600 text-white text-center">
                                        <%= vegetables[i].ir %>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
